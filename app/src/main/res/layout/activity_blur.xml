<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/blur_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内容模糊"
        android:textAllCaps="false" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/blur_nested_scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="实时模糊 by NestedScrollView"
        android:textAllCaps="false" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/blur_scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="实时模糊 by ScrollView"
        android:textAllCaps="false" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/blur_web_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="实时模糊 by WebView"
        android:textAllCaps="false" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/blur_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="实时模糊 by recyclerview"
        android:textAllCaps="false" />

</LinearLayout>